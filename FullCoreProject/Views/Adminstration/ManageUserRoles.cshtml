@model List<UserRolesViewModel>
@{
    var userId = ViewBag.userId;
}

<h1>ManageUserRoles</h1>

<form method="post">
    <div class="card">
        <div class="card-header">
            Add Or Remove Roles For User
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
                </div>
            }
        </div>

        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" />
            <a asp-action="EditUser" asp-route-id="@userId"> Cancel </a>
        </div>

    </div>

</form>