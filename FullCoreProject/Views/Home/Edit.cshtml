@model FullCoreProject.ViewModels.EmployeeEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EmployeeEditViewModel</h4>
<form enctype="multipart/form-data" asp-action="edit" asp-controller="home" method="post">
    <input hidden asp-for="id"/>
    <input hidden asp-for="ExistingPhotoPath"/>
    <div class="row input-group mt-4">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row input-group mt-4">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>


    <div class="row input-group mt-4">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-select">
                <option value="">Please Select Department</option>
            </select>
            <span asp-validation-for="Department"></span>
        </div>
    </div>

    <div class="row input-group mt-4">
        <label asp-for="Photo" class="col-sm-2 col-form-label" id="imglbl"> Upload File </label>
        <div class="col-sm-10">

            <input type="file" multiple asp-for="Photo" class="form-control" />


            <span asp-validation-for="Photo" class="text-danger"></span>
        </div>
    </div>

    <div class="row input-group mt-4 justify-content-center">
        <div class="col-sm-6">
            <img src="~/Images/@Model.ExistingPhotoPath" asp-append-version="true" height="200px" />
        </div>
    </div>
       

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="submit" class="btn btn-primary">Cancel</button>
        </div>



</form>

